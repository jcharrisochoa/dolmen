<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarElemento">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_buscar_elemento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autofillHints="@string/buscar_elemento"
                    android:ems="10"
                    android:hint="@string/buscar_elemento"
                    android:inputType="number"
                    android:maxLength="7"
                    tools:text="@string/buscar_elemento" />

                <ImageButton
                    android:id="@+id/btn_buscar_elemento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/colorPrimary"
                    android:contentDescription="@string/buscar_elemento"
                    android:src="@drawable/icon_search"
                    android:tint="@color/colorIconText" />

                <ImageButton
                    android:id="@+id/btn_limpiar_busqueda_elemento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/icon_cancel"
                    android:tint="@color/colorIconText" />

            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_tipologia"
                            android:textColor="@color/colorAccentCancel" />

                        <Spinner
                            android:id="@+id/sltTipologia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown"
                            android:spinnerMode="dialog" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_mobiliario"
                            android:textColor="@color/colorAccentCancel"/>

                        <Spinner
                            android:id="@+id/sltMobiliario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_referencia" />

                        <Spinner
                            android:id="@+id/sltReferencia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown" />

                        <TextView
                            android:id="@+id/textView36"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tipo Balasto" />

                        <Spinner
                            android:id="@+id/slt_tipo_balasto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown" />

                        <TextView
                            android:id="@+id/textView39"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tipo Base Fotocelda" />

                        <Spinner
                            android:id="@+id/slt_tipo_base_fotocelda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown" />

                        <TextView
                            android:id="@+id/textView40"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tipo Soporte" />

                        <Spinner
                            android:id="@+id/slt_tipo_brazo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown" />

                        <TextView
                            android:id="@+id/textView38"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Control Encendido" />

                        <Spinner
                            android:id="@+id/slt_control_encendido"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_barrio"
                            android:textColor="@color/colorAccentCancel"/>

                        <Spinner
                            android:id="@+id/sltBarrio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView25"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Zona" />

                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <RadioButton
                                        android:id="@+id/rd_urbano"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:checked="true"
                                        android:text="Urbana" />

                                    <RadioButton
                                        android:id="@+id/rd_rural"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:text="Rural" />

                                </RadioGroup>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView26"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Sector" />

                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <RadioButton
                                        android:id="@+id/rd_normal"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:checked="true"
                                        android:text="Normal" />

                                    <RadioButton
                                        android:id="@+id/rd_subnormal"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:text="SubNormal" />
                                </RadioGroup>

                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_direccion"
                            android:textColor="@color/colorAccentCancel"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/txt_direccion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:drawable/edit_text"
                                android:ems="10"
                                android:inputType="textPersonName" />

                            <ImageButton
                                android:id="@+id/btn_editar_direccion"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="@android:drawable/btn_default_small"
                                android:src="@drawable/icon_edit"
                                android:tint="@color/colorAccentOk" />
                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_coordenadas" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/view_latitud"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Lat:" />

                            <TextView
                                android:id="@+id/gps_latitud"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text=""
                                android:textColor="@color/design_default_color_primary_dark" />

                            <TextView
                                android:id="@+id/view_longitud"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Lon:" />

                            <TextView
                                android:id="@+id/gps_longitud"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text=""
                                android:textColor="@color/design_default_color_primary_dark" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/view_altitud"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Alt:" />

                            <TextView
                                android:id="@+id/gps_altitud"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text=""
                                android:textColor="@color/design_default_color_primary_dark" />

                            <TextView
                                android:id="@+id/view_precision"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Pre:" />

                            <TextView
                                android:id="@+id/gps_precision"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text=""
                                android:textColor="@color/design_default_color_primary_dark" />

                            <TextView
                                android:id="@+id/view_velocidad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Vel:" />

                            <TextView
                                android:id="@+id/gps_velocidad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text=""
                                android:textColor="@color/design_default_color_primary_dark" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/view_direccion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Dir:" />

                            <TextView
                                android:id="@+id/gps_direccion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:text=""
                                android:textColor="@color/design_default_color_primary_dark" />

                        </LinearLayout>

                        <Switch
                            android:id="@+id/swActualizarPosicion"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:checked="false"
                            android:text="@string/titulo_actualizar_posicion" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/txt_latitud"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@android:drawable/edit_text"
                                    android:ems="10"
                                    android:hint="Latitud"
                                    android:inputType="textPersonName" />

                                <EditText
                                    android:id="@+id/txt_longitud"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@android:drawable/edit_text"
                                    android:ems="10"
                                    android:hint="Longitud"
                                    android:inputType="textPersonName" />
                            </LinearLayout>

                            <ImageButton
                                android:id="@+id/btn_capturar_gps"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:drawable/btn_default_small"
                                android:src="@drawable/icon_marker"
                                android:tint="@android:color/holo_green_dark" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tipo Espacio"
                            android:textColor="@color/colorAccentCancel"/>

                        <Spinner
                            android:id="@+id/slt_tipo_escenario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_clase_via"
                            android:textColor="@color/colorAccentCancel"/>

                        <Spinner
                            android:id="@+id/sltClaseVia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown" />

                        <TextView
                            android:id="@+id/textView33"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/alert_ancho_via" />

                        <EditText
                            android:id="@+id/txt_ancho_via"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/edit_text"
                            android:ems="10"
                            android:hint="Ej: 20mts"
                            android:inputType="number" />

                        <Switch
                            android:id="@+id/sw_poste_exclulsivo_alumbrado_publico"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="¿Poste Exclusivo ?"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_tipo_poste" />

                        <Spinner
                            android:id="@+id/sltTipoPoste"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Norma Construcción Tipo Poste " />

                        <Spinner
                            android:id="@+id/slt_norma_construccion_poste"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_poste_no" />

                        <EditText
                            android:id="@+id/txtPosteNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/edit_text"
                            android:ems="10"
                            android:inputType="number" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_altura_poste" />

                        <EditText
                            android:id="@+id/txtAlturaPoste"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/edit_text"
                            android:ems="10"
                            android:hint="Ej: 12Mts"
                            android:inputType="number" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_interdistancia" />

                        <EditText
                            android:id="@+id/txtInterdistancia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/edit_text"
                            android:ems="10"
                            android:hint="Ej: 30Mts"
                            android:inputType="number" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_tipo_red" />

                        <Spinner
                            android:id="@+id/sltTipoRed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown" />

                        <TextView
                            android:id="@+id/textView41"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tipo Instalacion Red" />

                        <Spinner
                            android:id="@+id/slt_tipo_instalacion_red"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown" />


                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Calibre del conductro de la conexión al Elemento" />

                        <Spinner
                            android:id="@+id/slt_calibre_conexion_elemento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown" />

                        <Switch
                            android:id="@+id/sw_transformador_exclusivo_ap"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="¿El tranformador Exclusivo?" />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MT Transormador" />

                        <EditText
                            android:id="@+id/txt_mt_transformador"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/edit_text"
                            android:ems="10"
                            android:inputType="textPersonName" />

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CT Transformador" />

                        <EditText
                            android:id="@+id/txt_ct_transformador"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/edit_text"
                            android:ems="10"
                            android:inputType="textPersonName" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:text="@string/titulo_potencia_transformador"
                            />


                        <EditText
                            android:id="@+id/txtPotenciaTransformador"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/edit_text"
                            android:ems="10"
                            android:hint="Ej: 25KVA"
                            android:inputType="numberDecimal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_estado_elemento" />

                        <Spinner
                            android:id="@+id/sltEstadoMobiliario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/btn_dropdown"
                            android:textColor="@color/colorAccentCancel"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="?android:attr/listDivider" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center" />

                        <!--Foto 1-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/foto"
                                android:layout_width="250dp"
                                android:layout_height="250dp"
                                android:layout_gravity="center|center_horizontal"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/icon_no_photography" />

                            <Button
                                android:id="@+id/btn_tomar_foto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:drawable/btn_default_small"
                                android:drawableLeft="@android:drawable/ic_menu_camera"
                                android:text="@string/btn_tomar_foto" />

                            <Button
                                android:id="@+id/btn_borrar_foto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:drawable/btn_default"
                                android:drawableLeft="@android:drawable/ic_delete"
                                android:text="@string/btn_borrar_foto" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/txtIdElmento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:visibility="invisible" />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ProgressBar
                android:id="@+id/progressBarConsultarElemento"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true" />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:tint="@color/colorIconText"
        app:backgroundTint="@color/colorAccentOk"
        app:srcCompat="@drawable/icon_save"
        tools:ignore="VectorDrawableCompat" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="@dimen/fab_margin"
        android:tint="@color/colorIconText"
        app:backgroundTint="@color/colorAccentCancel"
