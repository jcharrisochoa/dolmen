<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginStart="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="left|center"
                android:layout_weight="0"
                android:contentDescription="@string/logo"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/idSeparador3"
                android:layout_width="wrap_content"
                android:layout_height="35sp"
                android:layout_weight="0"
                android:gravity="center"
                android:text="|"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNombreMunicipio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idSeparador"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="0"
                android:gravity="center"
                android:text="|"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNombreProceso"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idSeparador2"
                android:layout_width="wrap_content"
                android:layout_height="35sp"
                android:layout_weight="0"
                android:gravity="center"
                android:text="|"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNombreContrato"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="8sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scContenedor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="175dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnRecorrido"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:background="@android:drawable/btn_default_small"
                            android:drawableLeft="@android:drawable/ic_menu_myplaces"
                            android:enabled="false"
                            android:text="@string/btn_recorrido" />


                        <Button
                            android:id="@+id/btnCrearElemento"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_weight="1"
                            android:background="@android:drawable/btn_default_small"
                            android:drawableLeft="@android:drawable/ic_menu_add"
                            android:text="@string/btn_crear_elemento"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btnActualizarElemento"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_weight="1"
                            android:background="@android:drawable/btn_default_small"
                            android:drawableLeft="@android:drawable/ic_menu_edit"
                            android:text="@string/btn_actualizar_elemento"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btnGenerarRD"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_weight="1"
                            android:background="@android:drawable/btn_default_small"
                            android:drawableLeft="@android:drawable/ic_dialog_alert"
                            android:text="@string/btn_crear_reporte_dano"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btnGenerarActividad"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_weight="1"
                            android:background="@android:drawable/btn_default_small"
                            android:drawableLeft="@android:drawable/ic_menu_send"
                            android:text="@string/btn_crear_actividad"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn_perfil"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_weight="1"
                            android:background="@android:drawable/btn_default_small"
                            android:drawableLeft="@android:drawable/ic_menu_manage"
                            android:text="@string/btn_perfil"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn_censo_tecnico"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_weight="1"
                            android:background="@android:drawable/btn_default_small"
                            android:drawableLeft="@android:drawable/btn_star_big_on"
                            android:text="@string/btn_censo_tecnico" />

                        <Button
                            android:id="@+id/btn_salir"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_weight="1"
                            android:background="@android:drawable/btn_default_small"
                            android:drawableLeft="@android:drawable/ic_delete"
                            android:text="@string/btn_salir"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>